<div class="container-fluid">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8 my-6">
      <h2 id="{{postId}}" class="mt-6 center">
        Update a Blog Post
      </h2>
      <div class="form-floating mb-3 mt-3">
        <input type="text" class="form-control" id="title" placeholder="Enter title" name="title">
        <label for="title">Title</label>
      </div>

      <div class="form-floating mb-3">
        <textarea class="form-control" id="content" name="content" placeholder="Content goes here"></textarea>
        <label for="content">Content</label>
      </div>
      
      <p>Select a category this post belongs to: </p>
      <select id="categories" class="form-select mb-3">
        <option>Python</option>
        <option>C</option>
        <option>C++</option>
        <option>Java</option>
        <option>C#</option>
        <option>JavaScript</option>
      </select>

      <div class="my-3 d-flex justify-content-center">
        <button id="submit" type="submit" class="btn btn-primary">Update</button>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
</div>

<script src="/js/updatePost.js"></script>